		</property>
		<property name="targetMethod">
			<value>registerServices</value>
		</property>
		<property name="arguments">
			<list>
				<list>
				<!-- 
					<ref bean="noOperationService" />
					 -->
				</list>
			</list>
		</property>
	</bean>



</beans>